@model ENREL.Models.Usuarios.CatUsuarios
@{
    ViewBag.Title = "Información del usuario";
    string NombreUsuarioSession = "";
    if (Session["NombreUsuario"] != null)
    {
        NombreUsuarioSession = Session["NombreUsuario"].ToString();
    }
        
}

<!-- Begin Digital Analytix Tag 1.1302.13 -->
<script type="text/javascript">
    udm_('https://sb.scorecardresearch.com/b?c1=2&c2=17183199&ns_site=gobmx&name=SENER.ENREL.INVERSIONISTA.USUARIOS.DETALLE');
</script>
<noscript><p><img src="'https://sb.scorecardresearch.com/b?c1=2&c2=17183199&ns_site=gobmx&id_usuario=' + @NombreUsuarioSession + '&name=SENER.ENREL.INVERSIONISTA.USUARIOS.DETALLE" height="1" width="1" alt="*"></p></noscript>
<!-- End Digital Analytix Tag 1.1302.13 -->

@*Breadcum y usuario*@
<div class="row" style="margin-top:94px">
    <div class="col-sm-8">
        <ol class="breadcrumb">
            <li><a href="https://www.gob.mx/" target="_blank"><i class="icon icon-home"></i></a></li>
            <li><a href="@Url.Action("InicioInversionista","Home")">Inicio</a></li>
            <li><a href="@Url.Action("Index","Usuarios")">Catálogo de usuarios</a></li>
            <li class="active">Información del usuario</li>
        </ol>
    </div>
    <div class="col-sm-4">
        <div class="user-credencials">
            <ul class="list-unstyled">
                <li>
                    <span class="user-credencials__name">@NombreUsuarioSession</span>
                    <button type="button" class="btn btn-link pull-right" onclick="javascript: uid_call('SENER.ENREL.INVERSIONISTA.BTN_CERRARSESIÓN', 'clickout'); location.href = '@Url.Action("Logout", "Home")'">Salir</button>
                </li>
                <li><a href="@Url.Action("Actualizar", "Usuarios")">Modificar usuario</a></li>
            </ul>
        </div>
    </div>
</div>


@*Título *@
<h2>Información del usuario </h2>
<div class="vertical-buffer"></div>

@*Contenido: *@
<table class="table" style="width:50%;">
    <tbody>
        <tr>
            <td>
                @Html.Label("Nombre")
            </td>
            <td>
                @Html.DisplayFor(model => model.U_Nombre)
            </td>
        </tr>
        <tr>
            <td>
                @Html.Label("Tipo de usuario")
            </td>
            <td>
                @if(Model.U_IdTipoUsuario == 1)
                {
                    <text>Usuario tipo operativo</text>
                }
                else
                {
                    <text>Usuario tipo Representante legal</text>
                }
            </td>
        </tr>
        <tr>
            <td>
                @Html.Label("Correo electrónico")
            </td>
            <td>
                @Html.DisplayFor(model => model.U_CorreoElectronico)
            </td>
        </tr>
        <tr>
            <td>
                @Html.Label("Fecha de registro")
            </td>
            <td>
                @Html.DisplayFor(model => model.U_FechaRegistro)
            </td>
        </tr>
        <tr>
            <td>
                @Html.Label("Fecha de última modificacion")
            </td>
            <td>
                @Html.DisplayFor(model => model.U_FechaModificacion)
            </td>
        </tr>

    </tbody>
</table>

