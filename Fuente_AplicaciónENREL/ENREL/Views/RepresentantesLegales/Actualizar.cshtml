@model ENREL.Models.RepresentantesLegales.CatRepresentantesLegales
@{
    ViewBag.Title = "Actualizar Representante legal";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string NombreUsuarioSession = "";
    if (Session["NombreUsuario"] != null)
    {
        NombreUsuarioSession = Session["NombreUsuario"].ToString();
    }
    string MensajePrivacidad = Session["MensajePrivacidad"].ToString();
}
<!-- Begin Digital Analytix Tag 1.1302.13 -->
<script type="text/javascript">
    udm_('https://sb.scorecardresearch.com/b?c1=2&c2=17183199&ns_site=gobmx&name=SENER.ENREL.INVERSIONISTA.REPRESENTANTES.ACTUALIZAR');
</script>
<noscript><p><img src="'https://sb.scorecardresearch.com/b?c1=2&c2=17183199&ns_site=gobmx&id_usuario=' + @NombreUsuarioSession + '&name=SENER.ENREL.INVERSIONISTA.REPRESENTANTES.ACTUALIZAR" height="1" width="1" alt="*"></p></noscript>
